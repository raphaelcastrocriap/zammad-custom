<style>
  .ticket-card {
    background: #ffffff;
    border: 2px solid #de6b1c;
    border-radius: 12px;
    margin: 20px 0;
    box-shadow: 0 4px 12px rgba(222, 107, 28, 0.15);
    overflow: hidden;
    max-width: 600px;
  }
  .ticket-header {
    background: linear-gradient(135deg, #de6b1c 0%, #f08a3c 100%);
    color: white;
    padding: 20px;
    text-align: center;
  }
  .ticket-number {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 8px;
  }
  .ticket-title {
    font-size: 18px;
    margin: 0;
    opacity: 0.95;
  }
  .ticket-content {
    padding: 25px;
  }
  .greeting {
    font-size: 16px;
    color: #333;
    margin-bottom: 20px;
  }
  .update-info {
    background: #e8f4fd;
    border-left: 4px solid #17a2b8;
    padding: 15px;
    margin: 20px 0;
    border-radius: 0 8px 8px 0;
  }
  .changes-section {
    background: #fff3cd;
    border-left: 4px solid #ffc107;
    padding: 15px;
    margin: 20px 0;
    border-radius: 0 8px 8px 0;
  }
  .change-item {
    margin: 5px 0;
    color: #555;
  }
  .ticket-details {
    margin: 20px 0;
    padding: 15px;
    background: #fefefe;
    border: 1px solid #e9ecef;
    border-radius: 8px;
  }
  .action-button {
    display: inline-block;
    background: #de6b1c;
    color: white !important;
    padding: 12px 24px;
    text-decoration: none !important;
    border-radius: 8px;
    font-weight: bold;
    margin-top: 20px;
    transition: background-color 0.3s ease;
  }
  .action-button:hover {
    background: #c85a15;
    text-decoration: none !important;
  }
  .updater-info {
    color: #666;
    margin-bottom: 20px;
  }
</style>

